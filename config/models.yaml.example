# Model Routing Configuration
# Route task types to specific models

routing:
  classify: gpt-4o-mini
  summarize: gpt-4o-mini
  code_gen: gpt-4o
  reasoning: gpt-4o
  tool_use: gpt-4o
  default: gpt-4o-mini
  # Claude models (set claude_code_token in setup, use at your own risk):
  # code_gen: claude-sonnet-4-20250514
  # reasoning: claude-3-5-sonnet-20241022

# Ollama (optional - disabled by default)
ollama:
  enabled: false
  base_url: http://localhost:11434
  models:
    - llama3.2
    - codellama
